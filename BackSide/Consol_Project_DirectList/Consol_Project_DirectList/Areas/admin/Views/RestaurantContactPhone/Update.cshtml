@model RestaurantContactPhone

@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <h1>RestaurantContactPhone</h1>

    <div class="row">
        <div class="col-lg-6">
            <form asp-area="admin" asp-controller="RestaurantContactPhone" asp-action="update" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="@Model.Name" class="form-label">Name</label>
                    <input class="form-control" asp-for="@Model.Name">
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Phone" class="form-label">Phone</label>
                    <input class="form-control" asp-for="@Model.Phone">
                    <span asp-validation-for="@Model.Phone" class="text-danger"></span>
                </div>
                <input asp-for="@Model.Id" hidden />
                <input asp-for="@Model.Name" hidden />
                <input asp-for="@Model.Phone" hidden />

                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </div>
    </div>
</div>


