@model RestaurantMenu

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <h1>RestaurantMenu</h1>
    <div class="row">
        <div class="col-lg-6">
            <form asp-area="admin" asp-controller="RestaurantMenu" asp-action="Create" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="@Model.Name" class="form-label">Name</label>
                    <input class="form-control" asp-for="@Model.Name">
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.Detail" class="form-label">Detail</label>
                    <input class="form-control" asp-for="@Model.Detail">
                    <span asp-validation-for="@Model.Detail" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.Price" class="form-label">Price</label>
                    <input class="form-control" asp-for="@Model.Price">
                    <span asp-validation-for="@Model.Price" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-area="admin" asp-controller="RestaurantMenu" asp-action="Index">Back to list</a>
            </form>
        </div>
    </div>
</div>
