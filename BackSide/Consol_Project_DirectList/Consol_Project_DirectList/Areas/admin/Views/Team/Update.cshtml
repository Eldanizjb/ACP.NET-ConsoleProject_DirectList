@model Team
@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}



<div class="container">
    <h1>Team </h1>

    <div class="row">
        <div class="col-lg-12">
            <form asp-area="admin" asp-controller="Team" asp-action="Update" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="@Model.ImageFile" class="form-label">Image</label>
                    <img src="~/Uploads/@Model.ImageFile" alt="Alternate Text" width="100" />
                    <input class="form-control" asp-for="@Model.ImageFile">
                    <span asp-validation-for="@Model.ImageFile" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Fullname" class="form-label">Title</label>
                    <input class="form-control" asp-for="@Model.Fullname">
                    <span asp-validation-for="@Model.Fullname" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.TagToTeamId" class="form-label">TeamSosial</label>
                    <select class="form-control mb-3 selectTwo" aria-label="Default select example" multiple="multiple" asp-for="@Model.TagToTeamId">
                        <option selected>Select SosialName</option>
                        @foreach (var item in ViewBag.TeamSosial)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                    <span asp-validation-for="@Model.TagToTeamId" class="text-danger"></span>
                </div>



                <input type="hidden" asp-for="@Model.Id" />
                <input type="hidden" asp-for="@Model.Fullname" />
                <input type="hidden" asp-for="@Model.Image" />
                <input type="hidden" asp-for="@Model.Position" />

                <button type="submit" class="btn btn-primary">Update</button>
                <a asp-area="admin" asp-controller="Team" asp-action="Index">Back to list</a>
            </form>
        </div>
    </div>
</div>
