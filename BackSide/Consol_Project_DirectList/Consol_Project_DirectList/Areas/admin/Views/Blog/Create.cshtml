@model Blog
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <h1>Blog</h1>

    <div class="row">
        <div class="col-lg-12">
            <form asp-area="admin" asp-controller="Blog" asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="@Model.MainImageFile" class="form-label">Image</label>
                    <input class="form-control" asp-for="@Model.MainImageFile">
                    <span asp-validation-for="@Model.MainImageFile" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Title" class="form-label">Title</label>
                    <input class="form-control" asp-for="@Model.Title">
                    <span asp-validation-for="@Model.Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.Text" class="form-label">Content</label>
                    <textarea id="editor" class="form-control" asp-for="@Model.Text" style="height:300px"></textarea>
                    <span asp-validation-for="@Model.Text" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.CreateDate" class="form-label">CreateDate</label>
                    <input class="form-control" asp-for="@Model.CreateDate">
                    <span asp-validation-for="@Model.CreateDate" class="text-danger"></span>
                </div>


                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-area="admin" asp-controller="Blog" asp-action="Index">Back to list</a>
            </form>
        </div>
    </div>
</div>
