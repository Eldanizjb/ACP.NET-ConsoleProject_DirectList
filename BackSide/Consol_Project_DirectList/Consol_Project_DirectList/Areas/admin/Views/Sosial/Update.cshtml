@model Sosial

@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <h1>Sosial</h1>

    <div class="container">
        <h1>Team Sosial</h1>

        <div class="row">
            <div class="col-lg-6">
                <form asp-area="admin" asp-controller="Sosial" asp-action="update" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="mb-3">
                        <label asp-for="@Model.Icon" class="form-label">Icon</label>
                        <input class="form-control" asp-for="@Model.Icon">
                        <span asp-validation-for="@Model.Icon" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.Name" class="form-label">Name</label>
                        <input class="form-control" asp-for="@Model.Name">
                        <span asp-validation-for="@Model.Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.Link" class="form-label">Link</label>
                        <input class="form-control" asp-for="@Model.Link">
                        <span asp-validation-for="@Model.Link" class="text-danger"></span>
                    </div>
                    <input asp-for="@Model.Id" hidden />
                    <input asp-for="@Model.Icon" hidden />
                    <input asp-for="@Model.Name" hidden />
                    <input asp-for="@Model.Link" hidden />

                    <button type="submit" class="btn btn-primary">Update</button>
                </form>
            </div>
        </div>
    </div>
</div>

