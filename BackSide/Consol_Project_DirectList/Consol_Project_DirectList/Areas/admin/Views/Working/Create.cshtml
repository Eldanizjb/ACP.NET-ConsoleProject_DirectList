@model WorkingProcess

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>Working</h1>

    <div class="row">
        <div class="col-lg-6">
            <form asp-area="admin" asp-controller="Working" asp-action="create" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="@Model.Num" class="form-label">Num</label>
                    <input class="form-control" asp-for="@Model.Num">
                    <span asp-validation-for="@Model.Num" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Icon" class="form-label">Icon</label>
                    <input class="form-control" asp-for="@Model.Icon">
                    <span asp-validation-for="@Model.Icon" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Title" class="form-label">Title</label>
                    <input class="form-control" asp-for="@Model.Title">
                    <span asp-validation-for="@Model.Title" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Content" class="form-label">Content</label>
                    <textarea id="editor" class="form-control" asp-for="@Model.Content" style="height:300px"></textarea>
                    <span asp-validation-for="@Model.Content" class="text-danger"></span>
                </div>
                <a asp-area="admin" asp-controller="Working" asp-action="Index">Back to list</a>
                <button type="submit" class="btn btn-primary">Create</button>
            </form>
        </div>
    </div>
</div>

