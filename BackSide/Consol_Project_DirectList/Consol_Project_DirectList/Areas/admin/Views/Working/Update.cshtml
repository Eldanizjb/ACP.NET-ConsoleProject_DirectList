@model WorkingProcess
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>Working</h1>

    <div class="row">
        <div class="col-lg-12">
            <form asp-area="admin" asp-controller="Working" asp-action="Update" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="@Model.Num" class="form-label">Number</label>
                    <input class="form-control" asp-for="@Model.Num">
                    <span asp-validation-for="@Model.Num" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Icon" class="form-label">Icon</label>
                    <input class="form-control" asp-for="@Model.Icon">
                    <span asp-validation-for="@Model.Icon" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Title" class="form-label">Title</label>
                    <input class="form-control" asp-for="@Model.Title">
                    <span asp-validation-for="@Model.Title" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Content" class="form-label">Content</label>
                    <textarea id="editor" class="form-control" asp-for="@Model.Content" style="height:300px"></textarea>
                    <span asp-validation-for="@Model.Content" class="text-danger"></span>
                </div>

                <input type="hidden" asp-for="@Model.Id" />
                <input type="hidden" asp-for="@Model.Num" />
                <input type="hidden" asp-for="@Model.Icon" />
                <input type="hidden" asp-for="@Model.Title" />

                <button type="submit" class="btn btn-primary">Update</button>
                <a asp-area="admin" asp-controller="Working" asp-action="Index">Back to list</a>
            </form>
        </div>
    </div>
</div>

